<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--第一层阴影-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="@dimen/space_1x" />
        </shape>
    </item>
    <!--第二层前景-->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/default_selected_day_background_color"/>
            <corners android:radius="@dimen/space_1x" />
        </shape>
    </item>
</layer-list>